{
  "manifest_version": 2,
  "name": "__MSG_extensionName__",
  "description": "__MSG_extensionDescription__",
  "version": "1.0.0",
  "applications": { "gecko": { "id": "jsprintsetup-we@edabg.com", "strict_min_version": "52.0" } },
  "background": { "scripts": ["jsprintsetup-service.js"] },
  "content_scripts" : [
    {
      "matches": ["<all_urls>"],
      "all_frames": true,
      "match_about_blank": true,
      "run_at": "document_start",
      "js": ["jsprintsetup-iface.js"]
    }
  ],
  "options_ui": {
    "page": "options/options.html"
  },
  "permissions": [ "browsingData", "notifications", "tabs", "storage" ],

  "experiment_apis": {
    "printservice": {
      "schema": "../printservice/schema.json",
      "parent": {
        "scopes": ["addon_parent"],
        "script": "../printservice/api.js",
        "paths": [["printservice"]]
      }
    }
  },
  "page_action": {
    "browser_style": true,
    "default_icon": {
      "19": "icons/jsps.png",
      "38": "icons/jsps.png"
    },
    "default_title": "Whereami?",
    "default_popup": "options/options.html?host=mitko"
  },  
  
  "default_locale": "en"
}
